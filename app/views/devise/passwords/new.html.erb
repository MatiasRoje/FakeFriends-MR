<div id='stars'></div>
<div id='stars2'></div>
<div id='stars3'></div>

<div class="ff-container" data-controller="transition">
  <div class="transition transition-2" data-transition-target="elementRight"></div>
  <h2 class="devise-header">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <button type="submit" class="ff-btn-form-red extend-button">Send me reset password instructions</button>
  <% end %>

  <div class="flex-back-link">
    <%= link_to '<< BACK', root_path, data: { action: "click->transition#pressLinkRight" } %>
  </div>

  <%= render "devise/shared/links" %>
</div>
