<div id='stars'></div>
<div id='stars2'></div>
<div id='stars3'></div>

<div class="ff-container" data-controller="transition">
  <div class="transition transition-2" data-transition-target="elementRight"></div>
  <h2 class="devise-header">Welcome</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <button type="submit" class="ff-btn-form-red extend-button">Login</button>
  <% end %>

  <div class="flex-back-link">
    <%= link_to '<< BACK', root_path, data: { action: "click->transition#pressLinkRight" } %>
  </div>

  <%= render "devise/shared/links" %>
</div>
