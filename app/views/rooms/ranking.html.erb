<div id='stars'></div>
<div id='stars2'></div>
<div id='stars3'></div>

<div class="ff-container" data-controller="toggle-emoji">
  <h1 class="ff-title-ranking">Ranking</h1>

  <div class="ff-ranking-flex">
    <div data-controller="ranking"
      data-ranking-target="friends"
      data-ranking-rankingroom-id-value="<%= @room.id %>">
      <!-- HERE THE PARTIAL WILL BE INSERTED -->
      <%= render "shared/ranking_room", winner: @winner, fakefriend: @fakefriend%>
      <div class="chat-emojis" data-controller="ranking" data-ranking-target="emojis">
        <p data-action="click->toggle-emoji#toggleEmoji">😂</p>
        <p data-action="click->toggle-emoji#toggleEmoji">😭</p>
        <p data-action="click->toggle-emoji#toggleEmoji">💩</p>
        <p data-action="click->toggle-emoji#toggleEmoji">❤️</p>
      </div>
    </div>

    <div class="flex-btn-landing">
      <%= link_to new_room_path, class: "ff-btn-red" do %>
      <p>Play again?</p>
      <% end %>
    </div>
  </div>

  <div class="flex-back-link">
    <%= link_to "<< BACK", root_path %>
  </div>

</div>
