<div id='stars'></div>
<div id='stars2'></div>
<div id='stars3'></div>

<div class="ff-container home-container" data-controller="transition">
  <div class="transition transition-1" data-transition-target="elementLeft"></div>
  <div class="transition transition-2" data-transition-target="elementRight"></div>

    <h2 class="ff-title-medium ff-margin-v-50">Join Room</h2>
    <%= simple_form_for :user, url: post_join_room_path, wrapper: :inline_form, html: { class: "ff-margin-top-50" } do |f| %>
      <%= f.input :name, label: true, placeholder: "Enter a room code...", input_html: { value: nil } %>
      <%= f.submit "Join room", class: "ff-btn-form-red extend-button" %>
    <% end %>
    <%= render "shared/flashes" %>

  <div class="flex-back-link">
      <%= link_to "<< BACK", root_path, data: { action: "click->transition#pressLinkRight" } %>
  </div>

</div>